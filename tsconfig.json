{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "sourceMap": true
    },
    "includes": [
        "src/*.ts",
    ],
    "exclude": [
        "./node_modules/*"
    ]
}